                    <CardHeader className="pb-2">
                        <CardTitle className="text-white flex items-center gap-2">
                            <div className="p-2 rounded-xl bg-gradient-to-r from-blue-500 to-indigo-500 shadow-lg">
                                <Sun className="text-white" size={18} />
                            </div>
                            Daily Intention
                        </CardTitle>
                    </CardHeader>
